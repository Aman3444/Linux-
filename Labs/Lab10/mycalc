var1=$1
choice=$2
var2=$3
if [ $# != 3 ]; then
	echo -n "enter first int: "
	read  var1
	read choice
	read var2
fi


add() {
	((var3=$var1+$var2))
	echo "The sum of $var1 plus $var2 equals $var3";
	}

subtract()  {
	((var3=$var1-$var2))
	echo "The subtracted entted en of $var1 minus $var2 equals $var3";
	}

multiply() {
	((var3=$var1*$var2))
	echo "The multiply of $var1 multilpy $var2 equals $var3";
	}

