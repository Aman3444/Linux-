if [ "$choice" = "+" ]; then
	add $var1 $var2

elif [ "$choice" = "-" ]; then
	subtract $var1 $var2

elif [ "$choice" = "*" ]; then
	multiply $var1 $var2

else echo "Enter a valid choice";
fi


